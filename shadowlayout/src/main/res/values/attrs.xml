<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ssl_radius" format="dimension" />
    <attr name="ssl_shadowAlpha" format="float" />
    <attr name="ssl_shadowElevation" format="dimension" />
    <attr name="ssl_shadowType" format="enum">
        <enum name="outline" value="0" />
        <enum name="padding" value="1" />
    </attr>
    <attr name="ssl_shadowColor" format="color" />
    <attr name="ssl_background" format="reference|color" />

    <declare-styleable name="SShadowLayout">
        <attr name="ssl_radius" />
        <attr name="ssl_shadowElevation" />
        <attr name="ssl_shadowAlpha" />
        <attr name="ssl_shadowType" />
        <attr name="ssl_shadowColor" />
        <attr name="ssl_background" />
    </declare-styleable>

    <declare-styleable name="SShadowLinearLayout">
        <attr name="ssl_radius" />
        <attr name="ssl_shadowElevation" />
        <attr name="ssl_shadowAlpha" />
        <attr name="ssl_shadowType" />
        <attr name="ssl_shadowColor" />
        <attr name="ssl_background" />
    </declare-styleable>

    <declare-styleable name="SShadowRelativeLayout">
        <attr name="ssl_radius" />
        <attr name="ssl_shadowElevation" />
        <attr name="ssl_shadowAlpha" />
        <attr name="ssl_shadowType" />
        <attr name="ssl_shadowColor" />
        <attr name="ssl_background" />
    </declare-styleable>

    <declare-styleable name="SShadowConstraintLayout">
        <attr name="ssl_radius" />
        <attr name="ssl_shadowElevation" />
        <attr name="ssl_shadowAlpha" />
        <attr name="ssl_shadowType" />
        <attr name="ssl_shadowColor" />
        <attr name="ssl_background" />
    </declare-styleable>

    <declare-styleable name="SShadowFrameLayout">
        <attr name="ssl_radius" />
        <attr name="ssl_shadowElevation" />
        <attr name="ssl_shadowAlpha" />
        <attr name="ssl_shadowType" />
        <attr name="ssl_shadowColor" />
        <attr name="ssl_background" />
    </declare-styleable>
</resources>